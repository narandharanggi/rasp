<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin">

    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="Tambah Data"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:textStyle="normal" />
  
 <TextView android:id="@+id/produksi_susu_sapi_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="Produksi Susu"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/produksi_susu_sapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="produksi_susu"
        android:lines="1"
        android:minHeight="48dp"
        android:inputType="numberDecimal"
        android:textColorHint="@color/hint_enter_note"
        android:textSize="@dimen/input_new_note" />
    
    <TextView android:id="@+id/bk_sapi_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="BK"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/bk_sapi"
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="bk"
        android:lines="1"
        android:minHeight="48dp"
        android:textColorHint="@color/hint_enter_note"
        android:textSize="@dimen/input_new_note" />

  <TextView android:id="@+id/bobot_sapi_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="Harga"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        android:textStyle="normal" />

    
    <EditText
        android:id="@+id/bobot_sapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="bobot"
        android:lines="1"
        android:minHeight="48dp"
        android:textColorHint="@color/hint_enter_note"
        android:textSize="@dimen/input_new_note" />

</LinearLayout>